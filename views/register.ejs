<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/register.css">
    <link rel="preconnect" href="https://fonts.googleapis.com"><link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lilita+One&family=Noto+Serif+JP:wght@700&family=Open+Sans&display=swap" rel="stylesheet">
    <title>Register</title>
</head>
<body>
<div class="container">
    <div class="container-container">
        <div class="container-container-canvas">
            <div class="register">
                <h1>Register</h1>
            </div>
            <form action="/auth/register" method="post">
                <div>
                    <div>
                        <label for="Username">Username:</label>
                    </div>
                    <input type="text" name="Username" required>
                </div>
                <div>
                    <div>
                        <label for="Passwort">password:</label>
                    </div>
                    <input type="password" name="Passwort" required/>
                </div>
                <div>
                    <div>
                        <label for="passwordconfirm">password confirm:</label>
                    </div>
                    <input type="password" name="passwordconfirm">
                </div>
                <div>
                    <button type="submit">Regestrieren</button>
                    <div id="account">
                        Du hast bereits ein Account ?<a href="/login">LogIn</a>
                    </div>
                </div>
            </form>
            <%if(message){%>
                <div class="massage-container">
                    <%= message%>
                </div>
            <%}%>
        </div>
    </div>
</div>
</body>
</html>