            <div class="block">
                <label for="ID">ID:</label>
                <input type="number" name="ID">
            </div>
            <button class="button-grid" type="submit">Delete</button>
        </form>
        <form class="add-grid" action="/createauto" method="POST">
            <h1 class="form-h1">Create</h1>
            <div class="block">
                <label for="Name">Name:</label>
                <input type="text" name="Name" >
            </div>
    <div class="block">
        <label for="TeamID">TeamID:</label>
        <input type="number" name="TeamID" >
    </div>
            <div class="block">
                <label for="Typ">Typ:</label>
                <input type="number" name="Typ" >
            </div>
            <div class="block">
                <button class="button-grid"  type="submit">Add</button>
                <button class="button-grid"  type="reset">Reset</button>
            </div>
        </form>
        <form action="/updateauto" method="post">
            <h1 class="form-h1">Update</h1>
            <div class="block">
                <label for="ID">ID:</label>
                <input type="number" name="ID" required>
            </div>
            <div class="block">
                <label for="Name">Name:</label>
                <input type="text" name="Name" required>
            </div>
            <div class="block">
                <label for="TeamID">TeamID:</label>
                <input type="number" name="TeamID" >
            </div>
            <div class="block">
                <label for="Typ">Typ:</label>
                <input type="number" name="Typ" >
            </div>
            <div class="block">
                <button class="button-grid" type="submit">Update</button>
                <button class="button-grid"  type="reset">Reset</button>
            </div>
        </form>
    </div>
