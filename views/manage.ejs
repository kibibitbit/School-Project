<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/Default.css">
    <title>Manage</title>
</head>
<body>
<div class="manage-container">
    <div>
        <a href="/automanage" class="auto-manage">
            <h1>Auto Verwaltung</h1>
        </a>
    </div>
    <div>
        <a href="/streckenmanage" class="auto-manage">
            <h1>Strecken Verwaltung</h1>
        </a>
    </div>
    <div>
        <a href="/zeitmanage" class="auto-manage">
            <h1>Fahrzeit Verwaltung</h1>
        </a>
    </div>
</div>
<button id="home-button" type="submit"><a href="/">Home</a></button>
<section>
    <div id="form-container">
        <form action="/delete" method="post">
            <h1 class="form-h1">Delete</h1>
            <div class="block">
                <label for="ID">ID:</label>
                <input type="number" name="ID">
            </div>
            <button class="button-grid" type="submit">Delete</button>
        </form>
        <form class="add-grid" action="/create" method="POST">
            <h1 class="form-h1">Create</h1>
            <div class="block">
                <label for="Name">Name:</label>
                <input type="text" name="Name" >
            </div>
            <div class="block">
                <label for="Laenge">Laenge:</label>
                <input type="time" name="Laenge" />
            </div>
            <div class="block">
                <button class="button-grid"  type="submit">Add</button>
                <button class="button-grid"  type="reset">Reset</button>
            </div>
        </form>
        <form action="/update" method="post">
            <h1 class="form-h1">Update</h1>
            <div class="block">
                <label for="ID">ID:</label>
                <input type="number" name="ID" required>
            </div>
            <div class="block">
                <label for="Name">Name:</label>
                <input type="text" name="Name" required>
            </div>
            <div class="block">
                <label for="Laenge">Laenge:</label>
                <input type="time" name="Laenge" required/>
            </div>
            <div class="block">
                <button class="button-grid" type="submit">Update</button>
                <button class="button-grid"  type="reset">Reset</button>
            </div>
        </form>
    </div>
</section>
</body>
</html>