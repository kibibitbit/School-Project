<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/Default.css">
    <title>Manage</title>
</head>
<body>
<button id="home-button" type="submit"><a href="/">Home</a></button>
<section>
    <div id="form-container">
        <form action="/deletezeit" method="post">
            <h1 class="form-h1">Delete</h1>
            <div class="block">
                <label for="ID">ID:</label>
                <input type="number" name="ID">
            </div>
            <button class="button-grid" type="submit">Delete</button>
        </form>
        <form class="add-grid" action="/createzeit" method="POST">
            <h1 class="form-h1">Create</h1>
            <div class="block">
                <label for="AutoID">AutoID:</label>
                <input type="number" name="AutoID" >
            </div>
            <div class="block">
                <label for="RennstreckeID">RennstreckeID:</label>
                <input type="number" name="RennstreckeID">
            </div>
            <div class="block">
                <label for="fahrzeit">Fahrzeit:</label>
                <input type="time" name="fahrzeit">
            </div>
            <div class="block">
                <label for="Timestamp">Time:</label>
                <input type="datetime-local" name="Timestamp">
            </div>
            <div class="block">
                <button class="button-grid"  type="submit">Add</button>
                <button class="button-grid"  type="reset">Reset</button>
            </div>
        </form>
        <form action="/updatezeit" method="post">
            <h1 class="form-h1">Update</h1>
            <div class="block">
                <label for="ID">ID:</label>
                <input type="number" name="ID" required>
            </div>
            <div class="block">
                <label for="AutoID">AutoID:</label>
                <input type="number" name="AutoID" >
            </div>
            <div class="block">
                <label for="RennstreckeID">RennstreckeID:</label>
                <input type="number" name="RennstreckeID">
            </div>
            <div class="block">
                <label for="fahrzeit">Fahrzeit:</label>
                <input type="time" name="fahrzeit">
            </div>
            <div class="block">
                <label for="Timestamp">Time:</label>
                <input type="datetime-local" name="Timestamp">
            </div>
            <div class="block">
                <button class="button-grid" type="submit">Update</button>
                <button class="button-grid"  type="reset">Reset</button>
            </div>
        </form>
    </div>
</section>
</body>
</html>